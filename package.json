{
  "name": "buddha-js",
  "version": "0.1.0",
  "description": "A TypeScript library that programmatically models Buddhist concepts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "buddha": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "build:cli": "tsup --config tsup.cli.ts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "buddhism",
    "philosophy",
    "meditation",
    "mindfulness",
    "dharma",
    "four-noble-truths",
    "eightfold-path",
    "dependent-origination"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.3"
  }
}
